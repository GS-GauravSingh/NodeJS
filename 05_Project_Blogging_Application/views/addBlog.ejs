<!DOCTYPE html>
<html lang="en">

<head>

    <!-- Include the `Head.ejs` partial -->
    <%- include("./partials/head.ejs") %>
        <title>Add Blog</title>
</head>

<body>
    <!-- Include the `nav.ejs` partial -->
    <%- include("./partials/nav.ejs") %>

        <div class="container mt-4">
            <form action="/blog/" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="formFile" class="form-label">Upload Cover Image</label>
                    <input class="form-control" type="file" id="formFile" name="coverImage">
                </div>
                <div class="mb-3">
                    <label for="exampleInputTitle" class="form-label">Title</label>
                    <input type="text" class="form-control" id="exampleInputTitle" aria-describedby="emailHelp"
                        name="title">
                </div>
                <div class="mb-3">
                    <label for="floatingTextarea" class="form-label">Body</label>
                    <textarea class="form-control" placeholder="Write here..." id="floatingTextarea"
                        name="body"></textarea>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>

            </form>
        </div>

        <!-- Include the `Scripts.ejs` partial -->
        <%- include("./partials/scripts.ejs") %>
</body>

</html>